<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="vishnu" id="add_analytics_cron_job">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="analytics_cron_job"/>
            </not>
        </preConditions>
        <createTable tableName="analytics_cron_job">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="start_delay" type="number"/>
            <column name="expression" type="varchar(30)"/>
            <column name="enabled" type="boolean"/>
        </createTable>
    </changeSet>

    <changeSet author="vishnu" id="add_processed_events_table">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="processed_events"/>
            </not>
        </preConditions>
        <createTable tableName="processed_events">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="source" type="varchar(50)"/>
            <column name="last_processed_id" type="number"/>
            <column name="last_processed_uuid" type="varchar(36)"/>
            <column name="name" type="varchar(36)"/>
            <column name="category" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="locked" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id = "add patient cron job" author="vishnu">
        <preConditions onFail="MARK_RAN">
                <tableExists tableName="analytics_cron_job"/>
        </preConditions>
        <sql>
            insert into analytics_cron_job (name, start_delay, expression, enabled)
            values ('mrsPatientJob', 5, '0 45 * ? * *', true);
        </sql>
    </changeSet>

    <changeSet author="vishnu" id="add_patient_table">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="patient"/>
            </not>
        </preConditions>
        <createTable tableName="patient">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="patient_id" type="int"/>
            <column name="patient_identifier" type="varchar(255)"/>
            <column name="gender" type="varchar(20)"/>
            <column name="dead" type="boolean"/>
            <column name="birthdate" type="timestamp"/>
            <column name="death_date" type="timestamp"/>
            <column name="date_created" type="timestamp"/>
            <column name="uuid" type="varchar(36)"/>
            <column name="address1" type="varchar(400)"/>
            <column name="address2" type="varchar(400)"/>
            <column name="address3" type="varchar(400)"/>
            <column name="address4" type="varchar(400)"/>
            <column name="address5" type="varchar(400)"/>
            <column name="address6" type="varchar(400)"/>
            <column name="city_village" type="varchar(100)"/>
            <column name="state_province" type="varchar(100)"/>
            <column name="country" type="varchar(100)"/>
            <column name="country_district" type="varchar(100)"/>
            <column name="inactive" type="boolean"/>
            <column name="postal_code" type="varchar(20)"/>
            <column name="given_name" type="varchar(100)"/>
            <column name="middle_name" type="varchar(100)"/>
            <column name="family_name" type="varchar(100)"/>
            <column name="date_deactivated" type="timestamp"/>
            <column name="deactivated_reason" type="varchar(500)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
