<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="vishnu" id="add_analytics_cron_job">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="analytics_cron_job"/>
            </not>
        </preConditions>
        <createTable tableName="analytics_cron_job">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="start_delay" type="number"/>
            <column name="expression" type="varchar(30)"/>
            <column name="enabled" type="boolean"/>
        </createTable>
    </changeSet>

    <changeSet author="vishnu" id="add_processed_events_table">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="processed_events"/>
            </not>
        </preConditions>
        <createTable tableName="processed_events">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="source" type="varchar(50)"/>
            <column name="last_processed_id" type="number"/>
            <column name="last_processed_uuid" type="varchar(36)"/>
            <column name="name" type="varchar(36)"/>
            <column name="category" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="locked" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id = "add patient cron job" author="vishnu">
        <preConditions onFail="MARK_RAN">
                <tableExists tableName="analytics_cron_job"/>
        </preConditions>
        <sql>
            insert into analytics_cron_job (name, start_delay, expression, enabled)
            values ('mrsPatientJob', 5, '0 45 * ? * *', true);
        </sql>
    </changeSet>

    <changeSet id = "encounter cron job" author="sgk">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="analytics_cron_job"/>
        </preConditions>
        <sql>
            insert into analytics_cron_job (name, start_delay, expression, enabled)
            values ('mrsEncounterJob', 5, '0 50 * ? * *', true);
        </sql>
    </changeSet>

    <changeSet author="vishnu" id="add_patient_table">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="patient"/>
            </not>
        </preConditions>
        <createTable tableName="patient">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="patient_id" type="int"/>
            <column name="patient_identifier" type="varchar(255)"/>
            <column name="gender" type="varchar(20)"/>
            <column name="dead" type="boolean"/>
            <column name="birthdate" type="timestamp"/>
            <column name="death_date" type="timestamp"/>
            <column name="date_created" type="timestamp"/>
            <column name="uuid" type="varchar(36)"/>
            <column name="address1" type="varchar(400)"/>
            <column name="address2" type="varchar(400)"/>
            <column name="address3" type="varchar(400)"/>
            <column name="address4" type="varchar(400)"/>
            <column name="address5" type="varchar(400)"/>
            <column name="address6" type="varchar(400)"/>
            <column name="city_village" type="varchar(100)"/>
            <column name="state_province" type="varchar(100)"/>
            <column name="country" type="varchar(100)"/>
            <column name="country_district" type="varchar(100)"/>
            <column name="inactive" type="boolean"/>
            <column name="postal_code" type="varchar(20)"/>
            <column name="given_name" type="varchar(100)"/>
            <column name="middle_name" type="varchar(100)"/>
            <column name="family_name" type="varchar(100)"/>
            <column name="date_deactivated" type="timestamp"/>
            <column name="deactivated_reason" type="varchar(500)"/>
        </createTable>
    </changeSet>

    <changeSet author="vishnu" id="rename column country_district to county_district">
        <renameColumn tableName="patient" oldColumnName="country_district" newColumnName="county_district"/>
    </changeSet>

    <changeSet author="vishnu" id="add attribute columns in patient">
        <addColumn tableName="patient">
            <column name="telephone" type="varchar" />
            <column name="education" type="varchar" />
            <column name="occupation" type="varchar" />
            <column name="occupation_specific" type="varchar" />
            <column name="nationality" type="varchar" />
            <column name="nationality_id_number" type="varchar" />
            <column name="ethnicity" type="varchar" />
            <column name="marital_status" type="varchar" />
            <column name="client_resident" type="varchar" />
            <column name="district_of_birth" type="varchar" />
            <column name="mothers_name" type="varchar" />
            <column name="twin" type="varchar" />
            <column name="firstborn" type="varchar" />
            <column name="next_of_kin_contact_name" type="varchar" />
            <column name="next_of_kin_relationship" type="varchar" />
            <column name="next_of_kin_relationship_specific" type="varchar" />
            <column name="next_of_kin_address" type="varchar" />
            <column name="next_of_kin_telephone" type="varchar" />
            <column name="population" type="varchar" />
            <column name="referral_source" type="varchar" />
            <column name="contact_tracing" type="varchar" />
            <column name="date_index_client_tested" type="varchar" />
            <column name="index_client_code" type="varchar" />
            <column name="index_relationship" type="varchar" />
            <column name="site_type" type="varchar" />
            <column name="outreach_classification" type="varchar" />
            <column name="outreach_site_name" type="varchar" />
            <column name="moonlight_testing" type="varchar" />
            <column name="dreams_activity" type="varchar" />
            <column name="nearest_clinic_or_hospital" type="varchar" />
            <column name="tested_for_hiv" type="varchar" />
            <column name="hiv_test_result" type="varchar" />
            <column name="tested_in_last_twelve_months" type="varchar" />
            <column name="couple_testing" type="varchar" />
            <column name="registration_number_of_partner" type="varchar" />
        </addColumn>
    </changeSet>

    <changeSet author="vishnu" id="add_patient_enrollment">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="patient_enrollment"/>
            </not>
        </preConditions>
        <createTable tableName="patient_enrollment">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="patient_identifier" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="program" type="varchar"/>
            <column name="org_unit" type="varchar"/>
            <column name="status" type="varchar"/>
            <column name="program_unique_id" type="number"/>
            <column name="enrollment_date" type="date"/>
            <column name="incident_date" type="date"/>
            <column name="date_created" type="timestamp"/>
        </createTable>
    </changeSet>

    <changeSet author="vishnu" id="add_encounter_table">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="encounter"/>
            </not>
        </preConditions>
        <createTable tableName="encounter">
            <column name="encounter_id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="uuid" type="varchar(36)"/>
            <column name="encounter_type_id" type="number"/>
            <column name="visit_id" type="number"/>
            <column name="location_id" type="number"/>
            <column name="patient_id" type="number"/>
            <column name="encounter_date_created" type="timestamp"/>
            <column name="location_name" type="varchar"/>
        </createTable>
    </changeSet>

    <changeSet author="sgk" id="event_record_yet_to_be_synced_to_dhis2">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="event_record_left_to_sync"/>
            </not>
        </preConditions>
        <createTable tableName="event_record_left_to_sync">
            <column name="event_record_id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="type_name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="type_identifier" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="instance_tracker_table" author="sgk">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="instance_tracker" schemaName="public"/>
            </not>
        </preConditions>
        <comment>Creating tracker table for tracked entity instance in public schema</comment>
        <sql>
            CREATE TABLE public.instance_tracker(
            patient_id text,
            instance_id text PRIMARY KEY,
            created_by text,
            date_created TIMESTAMP
            );
        </sql>
    </changeSet>
    <changeSet id="marker_table" author="sgk">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="marker" schemaName="public"/>
            </not>
        </preConditions>
        <comment>Creating Marker table to track last sync date time in public schema</comment>
        <sql>
            CREATE TABLE public.marker(
            marker_id SERIAL PRIMARY KEY,
            program_name TEXT,
            category TEXT,
            last_synced_date TIMESTAMP
            );
        </sql>
    </changeSet>
    <changeSet author="sgk" id="add attribute UIC column in patient">
        <addColumn tableName="patient">
            <column name="UIC" type="varchar"/>
        </addColumn>
    </changeSet>

    <changeSet author="vishnu" id="add mapping table">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="mapping"/>
            </not>
        </preConditions>
        <createTable tableName="mapping">
            <column name="mapping_name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="lookup_table" type="jsonb"/>
            <column name="mapping_json" type="jsonb"/>
            <column name="config" type="jsonb"/>
        </createTable>
    </changeSet>

    <changeSet id="add_log_table" author="vishnu">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="log" schemaName="public"/>
            </not>
        </preConditions>
        <comment>Creating a Log table to track status of the each sync</comment>
        <sql>
            CREATE TABLE public.log(
            log_id SERIAL PRIMARY KEY,
            program text,
            synced_by text,
            comments text,
            status text,
            failure_reason text,
            date_created TIMESTAMP
            );
        </sql>
    </changeSet>
    <changeSet id="rename_column_failure_reason_to_status_info" author="vishnu">
        <preConditions onFail="MARK_RAN">
            <columnExists columnName="failure_reason" tableName="log"/>
        </preConditions>
        <comment>Renaming failure_reason to status_info in log table</comment>
        <sql>
            ALTER TABLE log RENAME COLUMN failure_reason TO status_info;
        </sql>
    </changeSet>

    <changeSet author="vishnu" id="add_org_unit_column_to_patient">
        <addColumn tableName="patient">
            <column name="org_unit" type="varchar"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
